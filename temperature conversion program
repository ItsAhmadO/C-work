#include <bits/stdc++.h>
using namespace std;

int main(){
    double temp;
    char unit;
    
    cout << "******* Temperature conversion *******\n";
    cout << "F = Fahrenheit\n";
    cout << "C = Celsius\n";
    cout << "What unit would you like to convert to: ";
    cin >> unit;

    if(unit == 'F'){
        cout << "Enter the temperature in celsius: ";
        cin >> temp;

        cout << "Your temperature in celsius is " << (1.8 * temp) + 32 << " fahrenheit";
    }
    else if(unit == 'C'){
        cout << "Enter the temperature in fahrenheit: ";
        cin >> temp;

        cout << "Your temperature in celsius is " << (temp - 32) / (1.8) << " degrees";
    }
    else{
        cout << "Enter the correct symbol";
    }
    return 0;
}

